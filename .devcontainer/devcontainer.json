{
    "name": "Python 3.12 Codespace",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
    ],
    "postCreateCommand": "pip install --upgrade pip; pip install -r requirements.txt",
    "remoteUser": "vscode"
}
